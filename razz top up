  <!-- Popup Sukses -->
  <div class="popup" id="popup">
    ‚úÖ Top Up Berhasil Diproses!
  </div>

  <script>
    const form = document.getElementById("topupForm");
    const popup = document.getElementById("popup");
    const modal = document.getElementById("modal");
    const orderSummary = document.getElementById("orderSummary");
    const cancelBtn = document.getElementById("cancelBtn");
    const confirmBtn = document.getElementById("confirmBtn");
    const gameCards = document.querySelectorAll(".game-card");
    const gameInput = document.getElementById("game");
    const nominalCards = document.querySelectorAll(".nominal-card");
    const nominalInput = document.getElementById("nominal");

    // pilih game
    gameCards.forEach(card => {
      card.addEventListener("click", () => {
        gameCards.forEach(c => c.classList.remove("active"));
        card.classList.add("active");
        gameInput.value = card.getAttribute("data-game");
      });
    });

    // pilih nominal
    nominalCards.forEach(card => {
      card.addEventListener("click", () => {
        nominalCards.forEach(c => c.classList.remove("active"));
        card.classList.add("active");
        nominalInput.value = card.getAttribute("data-value");
      });
    });

    // submit form -> tampilkan modal
    form.addEventListener("submit", function(e) {
      e.preventDefault();
      if(gameInput.value && document.getElementById("idplayer").value && nominalInput.value && document.getElementById("payment").value) {
        orderSummary.innerHTML = `
          <p><strong>Game:</strong> ${gameInput.value}</p>
          <p><strong>ID Player:</strong> ${document.getElementById("idplayer").value}</p>
          <p><strong>Server:</strong> ${document.getElementById("server").value || '-'}</p>
          <p><strong>Nominal:</strong> ${nominalInput.value}</p>
          <p><strong>Pembayaran:</strong> ${document.getElementById("payment").value}</p>
        `;
        modal.style.display = "flex";
      }
    });

    // batal
    cancelBtn.addEventListener("click", () => {
      modal.style.display = "none";
    });

    // konfirmasi
    confirmBtn.addEventListener("click", () => {
      modal.style.display = "none";
      popup.style.display = "block";
      setTimeout(() => { popup.style.display = "none"; }, 3000);
    });
  </script>

</body>
</html>
